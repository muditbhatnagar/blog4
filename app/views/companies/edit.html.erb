<h1>Editing Companies</h1>
 
<%= form_for :company, url: company_path(@company), method: :patch do |f| %>
 
  <% if @company.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@company.errors.count, "error") %> prohibited
        this company from being saved:
      </h2>
      <ul>
        <% @company.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <p>
    <%= f.label :Company %><br>
    <%= f.text_field :company %>
  </p>

  <p>
    <%= f.label :Postcode %><br>
    <%= f.text_field :postcode %>
  </p>

 <div class="dropdown">
    <%= f.label :Country %>
    <%= f.select :country_id, Country.all.map{|u| [u.country__name,u.id]} %>
  </div>
 
 <div class="dropdown">
    <%= f.label :State %>
    <%= f.select :state_id, State.all.map{|u| [u.state_name,u.id]} %>
  </div>
 
 <div class="dropdown">
    <%= f.label :City %>
    <%= f.select :city_id, City.all.map{|u| [u.city_name,u.id]} %>
  </div>
 
  <p>
    <%= f.submit %>
  </p>
 
<% end %>
 

