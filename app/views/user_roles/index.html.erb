
<h1>Listing Roles</h1>
 <%= link_to 'New Role', new_user_role_path %>
<table>
  <tr>
    <th>Role_Name</th>
  </tr>
 
  <% @user_role.each do |user_role| %>
    <tr>
      <td><%= user_role.role_name %></td>
      <td><%= link_to 'Show', user_role_path(user_role), class: "btn btn-info" %></td>
      <td><%= link_to 'Edit', edit_user_role_path(user_role), class: "btn btn-primary" %></td>
      <td><%= link_to 'Destroy', user_role_path(user_role),
              method: :delete,
              data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td
    </tr>
  <% end %>
</table>

