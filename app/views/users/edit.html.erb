<h1>Editing User</h1>
 
<%= form_for :user, url: user_path(@user), method: :patch do |f| %>
 
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@user.errors.count, "error") %> prohibited
        this user from being saved:
      </h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
 
  <div class="form-group">
    <label class="col-sm-2 control-label">First name:</label>
    <div class="col-sm-2  inputGroupContainer">
      <%= f.text_field :first_name,:class=>"form-control",:placeholder => "First name" %>
    </div>
  </div>
 
  <div class="form-group">
    <label class="col-sm-2 control-label">Last name:</label>
    <div class="col-sm-2  inputGroupContainer">
      <%= f.text_field :last_name,:class=>"form-control",:placeholder => "Last name" %>
    </div>
  </div>

 <div class="form-group">
    <label class="col-sm-1 control-label">Email:</label>
    <div class="col-sm-3  inputGroupContainer">
      <%= f.text_field :email,:class=>"form-control",:placeholder => "Email" %>
    </div>
  </div><br><br><br>

  
  

  <div class="form-group">
    <label class="col-sm-2 control-label">Monthly:</label>
    <div class="col-sm-2  inputGroupContainer">
      <%= f.text_field :monthly_charge,:class=>"form-control",:placeholder => "Monthly" %>
    </div><br><br><br>
  

  <div class="form-group">
        <label class="col-sm-2 control-label">company:</label>
        <div class="col-sm-7  inputGroupContainer">
         <%= f.select(:company_id, Country.all.collect {|u| [u.country__name, u.id]},{},:prompt => 'Select Company',:class=>"form-control") %>

          </div>
        </div><br><br><br>

 <div class="form-group">
        <label class="col-sm-2 control-label">Role:</label>
        <div class="col-sm-7  inputGroupContainer">
         <%= f.select(:role_id, UserRole.all.collect {|u| [u.role_name, u.id]},{},:prompt => 'Select Company',:class=>"form-control") %>
          </div>
        </div><br><br>

  

 
  <p>
    <%= f.submit %>
  </p>
 
<% end %>

