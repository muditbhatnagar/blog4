<h2> Add New User <h2>
<%= form_for @user, url: new_member_path, method: 'post' do |f| %>

 <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@user.errors.count, "error") %> prohibited
        this user from being saved:
      </h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label class="col-sm-2 control-label">First name:</label>
    <div class="col-sm-2  inputGroupContainer">
      <%= f.text_field :first_name,:class=>"form-control",:placeholder => "First name" %>
    </div>
  </div>
 
  <div class="form-group">
    <label class="col-sm-2 control-label">Last name:</label>
    <div class="col-sm-2  inputGroupContainer">
      <%= f.text_field :last_name,:class=>"form-control",:placeholder => "Last name" %>
    </div>
  </div>

 <div class="form-group">
    <label class="col-sm-1 control-label">Email:</label>
    <div class="col-sm-3  inputGroupContainer">
      <%= f.text_field :email,:class=>"form-control",:placeholder => "Email" %>
    </div>
  </div><br><br><br>

  <div class="form-group">
    <label class="col-sm-2 control-label">Password:</label>
    <div class="col-sm-2  inputGroupContainer">
    <%= f.password_field :password,:class=>"form-control", autocomplete: "off",:placeholder => "Password" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
  </div>
  

  <div class="form-group">
    <label class="col-sm-2 control-label">Pass_confirm:</label>
     <div class="col-sm-2  inputGroupContainer">
     <%= f.password_field :password_confirmation,:class=>"form-control", autocomplete: "off",:placeholder => "password Confirmation" %>
  </div>
  

  <div class="form-group">
    <label class="col-sm-2 control-label">Monthly:</label>
    <div class="col-sm-2  inputGroupContainer">
      <%= f.text_field :monthly_charge,:class=>"form-control",:placeholder => "Monthly" %>
    </div><br><br>
  

  <div class="form-group">
        <label class="col-sm-2 control-label">company:</label>
        <div class="col-sm-7  inputGroupContainer">
         <%= f.select(:company_id, Company.all.collect {|u| [u.company, u.id]},{:prompt => 'Select Company'},:class=>"form-control") %>

          </div>
        </div><br><br>

 <div class="form-group">
        <label class="col-sm-2 control-label">Role:</label>
        <div class="col-sm-7  inputGroupContainer">
         <%= f.select(:role_id, UserRole.all.collect {|u| [u.role_name, u.id]},{:prompt => 'Select Role'},:class=>"form-control") %>
          </div>
        </div><br>

  <div class="form-group">
    <%= f.label :start_date,:class=>"col-sm-2 control-label" %>
    <div class="col-sm-2  inputGroupContainer">
      <%= f.text_field :start_date, :placeholder => "Start date", :id=>"start-date",:class=>"form-control"%>
    </div>
    
  <div class="form-group">
     <%= f.label :end_date,:class=>"col-sm-2 control-label" %>
     <div class="col-sm-2  inputGroupContainer">
      <%= f.text_field :end_date,:placeholder => "End date",:class=>"form-control",:id=> "end-date"%>
   </div>
  </div>

  <div class="field">
    <div class="form-group">
      <%= f.label :activebit,:class=>"col-sm-2 control-label"  %>
      <div class="col-sm-1  inputGroupContainer">
      <%= f.check_box :activebit %>
    </div>
  </div><br><br><br>

  <div class="form-group">
      <label class="col-sm-1 control-label">Image:</label>
    <div class="col-sm-1  inputGroupContainer">
     <%= f.file_field :image,:onchange => "showimagepreview(this)",:class=>"img_file"  %>
     <img id="imgprvw" style="width: 167px; height: 94px; margin-top: 8px;" />
            <%#= f.select(:image_id, Image.all.collect {|u| [u. real_name, u.id]},:prompt => 'Select Category',:class=>"form-control") %>
    </div>
  </div><br><br><br><br><br>

  <div class="form-group">
    <label class="col-sm-2 control-label">Notes:</label>
    <div class="col-sm-5  inputGroupContainer">
     <%= f.text_area :notes_blob,:class=>"form-control" %>
    </div>
  </div><br><br>

  <p>
    <%= f.submit 'save', class: "btn btn-info" %>
  </p>

  <%= link_to 'Back', users_path, class: "btn btn-info" %>
<% end %>

<script>
  $( function() {
    $("#start-date" ).datetimepicker({ format: 'DD-MM-YYYY'});
    $("#end-date" ).datetimepicker({ format: 'DD-MM-YYYY'});
  } );
  </script>  

